                        </ul>
                    </li>
                    <li id="liProjects">@Html.ActionLink("Projects", "Index", "Projects")</li>
                    <li id="liPhotoGallery">@Html.ActionLink("Photo Gallery", "Index", "PhotoGallery")</li>
                    <li id="liBulletin">@Html.ActionLink("Bulletin", "Index", "Bulletin")</li>
                    <li id="liContact"> @Html.ActionLink("Contact Us", "Index", "Contact")</li>
                </ul>
