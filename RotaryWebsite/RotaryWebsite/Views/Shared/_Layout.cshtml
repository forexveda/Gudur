            </div>
        </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

    <script src="~/js/main.js"></script>
    <script>
        var url = window.location.pathname,
            urlRegExp = new RegExp(url.replace(/\/$/, '') + "$"); // create regexp to match current url pathname and remove trailing

        //slash if present as it could collide with the link in navigation in case trailing slash wasn't present there

        $('.r-main-menu-list li a').parent().removeClass('active');
        if (url.toLowerCase() == '/home' || url == '/') {
            $('[id$=liHome]').addClass('active');
        } else if (url.toLowerCase() == '/theclub' || url.toLowerCase() == '/clubluminaries' ||
            url.toLowerCase() == '/founder' || url.toLowerCase() == '/boardmember' || url.toLowerCase() == '/pastleader'
            || url.toLowerCase() == '/member') {
            $('[id$=liaboutUs]').addClass('active');
        } else if (url.toLowerCase() == '/projects') {
            $('[id$=liProjects]').addClass('active');
        } else if (url.toLowerCase() == '/photogallery') {
            $('[id$=liPhotoGallery]').addClass('active');
        } else if (url.toLowerCase() == '/bulletin') {
            $('[id$=liBulletin]').addClass('active');
        } else if (url.toLowerCase() == '/contact') {
            $('[id$=liContact]').addClass('active');
        }

